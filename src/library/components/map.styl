.map
	background-color white
	padding-top 0em
	padding-bottom 0em

.map-wrapper {
	position: relative;
	height: 625px;
	background: url("../img/map.jpg");
	width: 100%;
	position: relative;
}

.map__title
	position absolute
	z-index 10
	left 50%
	margin-left -8.15em
	some-title(color5)
	text-transform uppercase
	align-center()
	background-color white
	padding 1em
	margin-top 2em
	cursor default

@media screen and (max-width 1024px)
	.map-mask
		width 100%
		height 100%
		z-index 9
		position absolute
		top 0
		left 0
		background: url("../img/map.jpg");
		background-size cover
		background-position center