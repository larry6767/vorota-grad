.director
	background-color white
	padding-top 4em
	padding-bottom 4em

.director-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.director-column
	flex-basis 50%
	padding 0 2em
	text-align center

.director__title
	some-title(color5)
	margin-top 0
	margin-bottom 0
	text-transform uppercase
	text-align center

.director__text:first-of-type
	text-align center

.director__text
	some-text(color5)
	margin-bottom 2em

.director__text:last-of-type
	margin-bottom 1em

.director__btn
	btn(white, color5)
	ps-bold(1rem, 1.3, color5)
	btn-hover(color5, color5, white)

.director__img
	width 100%

@media (max-width: 992px)
	.director-container
		flex-direction column
	
	.director-column
		margin-bottom 3em
	
	.director-column:first-child
		order 1
		margin-bottom 0
