.crew
	background-color #292929
	padding-top 4em
	padding-bottom 4em

.crew-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.crew-column
	flex-basis 50%
	padding 0 2em

.crew-title
	some-title(white)
	margin-top 0
	margin-bottom 1em
	text-transform uppercase

.crew-text
	some-text(white)
	margin-bottom 2em

.crew-img
	width 100%

.crew-btn
	btn(color4, color4)
	ps-bold(1rem, 1.3, white)

@media (max-width: 992px)
	.crew-column
		flex-column()
		
	.crew-container
		flex-direction column
	
	.crew-column:first-child
		margin-bottom 3em
	
	.crew-title
		align-center()
		
	.crew-text
		align-center()
		
@media (max-width: 576px)
	.crew-title
		margin 0 1em
		margin-bottom 1em
	.crew-text
		margin 0 2.5em
		margin-bottom 2em
