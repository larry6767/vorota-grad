.crew
	background-color white
	padding-top 4em
	padding-bottom 4em

.crew-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.crew-column
	width 50%
	padding 0 2em

.crew-title
	some-title(color5)
	margin-top 0
	margin-bottom 1em
	text-transform uppercase

.crew-text
	some-text(color5)
	margin-bottom 2em

.crew-img
	width 100%

.crew-btn
	btn(white, color5)
	ps-bold(16px, 1.3, color5)
	btn-hover(color5, color5, white)

@media (max-width: 992px)
	.crew-column
		flex-column()
		width 100%
		
	.crew-container
		flex-direction column
	
	.crew-column:first-child
		margin-bottom 3em
	
	.crew-title
		align-center()
		
	.crew-text
		align-center()
		
@media (max-width: 576px)
	.crew-title
		margin 0 1em
		margin-bottom 1em
	.crew-text
		margin 0 2.5em
		margin-bottom 2em
