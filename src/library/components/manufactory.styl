.manufactory
	background-color color5
	padding-top 4em
	padding-bottom 4em
	text-align center

.manufactory__title
	some-title(white)
	text-transform uppercase
	align-center()
	margin-top 0

.manufactory__text
	some-text(white)
	text-align center
	padding 0 1em

.manufactory__text--uppercase
	text-transform uppercase
	margin-top 3em
	margin-bottom 2em

.manufactory__btn
	btn(color, white)
	ps-bold(16px, 1.3, white)
	btn-hover(white, white, color5)
	margin 1em auto
	margin-bottom 0.5em

.manufactory-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.manufactory-column
	width 33%

@media screen and (max-width: 625px)
	.manufactory iframe
		width 380px
		height 214px

@media screen and (max-width: 425px)
	.manufactory iframe
		width 280px
		height 158px