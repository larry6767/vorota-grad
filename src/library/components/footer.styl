.footer
	background color5
	padding-top 1em
	padding-bottom 1em

.footer-container
	max-width 1200px
	margin 0 auto
	flex-row()

.footer .phone-block__text
	color white
	
.signature
	flex-grow 1
	text-align center
	vertical-align middle
	flex-row()

.signature__text
	some-text(white)
	align-center()

.signature__img
	margin-left 0.5em

@media (max-width: 992px)
	.footer .logo
		flex-grow 1
		margin 0 20px
	.footer .phone-block
		flex-grow 1
		margin 0 20px
		
@media (max-width: 800px)
	.footer .signature
		order 1
		margin-top 2em
		margin-bottom 1em
		
@media (max-width: 576px)
	.main-header-container
		flex-column()
		
	.logo
		margin-right 0
		margin-bottom 30px
	
	.phone-block
		margin-left 0
		margin-bottom 10px
	
	.phone-number
		ps-bold(2rem, 1.3, color4)
		
	.main-navigation__link
		padding 20px 25px