.footer
	background color5
	padding-top 1em
	padding-bottom 1em

.footer-container
	max-width 1200px
	margin 0 auto
	flex-row()

.footer .phone-block__text
	color white
	
.signature
	flex-grow 1
	text-align center
	vertical-align middle
	flex-column()

.signature__text
	some-text(white)
	align-center()
	line-height 1

@media (max-width: 992px)
	.footer .logo
		flex-grow 1
		margin 0 20px
	.footer .phone-block
		flex-grow 1
		margin 0 20px
		
@media (max-width: 800px)
	.footer .signature
		order 1
		margin-top 2em
		margin-bottom 1em
		width 300px
	
	.footer .logo
		margin-top 1em
	
	.footer .phone-block
		margin-top 1em
		
@media (max-width: 576px)
	.footer-container
		flex-column()
		
	.footer .logo
		margin-bottom 2em
	
	.footer .phone-block
		margin-bottom 1em
	
	.phone-number
		ps-bold(2rem, 1.3, color4)