.produce
	background-color color5
	padding-top 4em
	padding-bottom 4em

.produce-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.produce__title
	some-title(white)
	text-transform uppercase
	align-center()
	margin-top 0

.produce__list
	some-list(white)
	flex-row()
	justify-content space-between
	padding 0

.produce__item
	text-align center

// .filter
// 	position absolute
// 	top 0
// 	left 0
// 	width 100%
// 	height 100%
// 	background-color rgba(255, 255, 255, 0.3)

.produce__img
	position relative
	width 150px
	height 150px
	border 1em solid #fff
	margin-bottom 1em
	background-size cover
	transition 0.1s
	&:hover
		border 0.3em solid white
		
		// .filter
		// 	background-color rgba(96, 72, 72, 0.1)

.produce__img--1
	background-image url("../img/produce/2.jpg")

.produce__img--2
	background-image url("../img/produce/1.jpg")

.produce__img--3
	background-image url("../img/produce/3.jpg")

.produce__img--4
	background-image url("../img/produce/4.jpg")

.produce__img--5
	background-image url("../img/produce/5.jpg")

.produce__text
	some-text(white)
	align-center()
	text-decoration none

.produce__item:first-child
	margin-left 2em

.produce__item:last-child
	margin-right 2em

.produce__item a
	text-decoration none

@media screen and (max-width: 992px)
	.produce__list
		justify-content center
	.produce__item
		margin-left 2em
		margin-right 2em
		margin-bottom 2em
