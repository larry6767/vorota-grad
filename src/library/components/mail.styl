.mail
	background-color #292929
	padding-top 4em
	padding-bottom 4em

.mail-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.mail-column
	flex-basis 50%
	padding 0 2em

.mail__title
	some-title(white)
	margin-top 0
	margin-bottom 1em
	text-transform uppercase

.mail__text
	some-text(white)
	margin-bottom 1em

.mail__img
	width 100%

.mail__btn
	btn(color4, color4)
	ps-bold(1rem, 1.3, white)

.mail-list
	some-list(white)
	padding 0

@media (max-width: 992px)
	.mail-column
		flex-column()
		
	.mail-container
		flex-direction column
	
	.mail-column:first-child
		margin-bottom 3em
	
	.mail__title
		align-center()
		
	.mail__text
		align-center()
	
	.mail-column:first-child
		display none
	.mail-list
		align-center()

@media (max-width: 576px)
	.mail__title
		margin 0 1em
		margin-bottom 1em
	.mail__text
		margin 0 2.5em
		margin-bottom 2em
