.mail
	background-color white
	padding-top 4em
	padding-bottom 4em

.mail-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.mail-column
	flex-basis 50%
	padding 0 2em

.mail__title
	some-title(color5)
	margin-top 0
	margin-bottom 1em
	text-transform uppercase

.mail__text
	some-text(color5)
	margin-bottom 1em

.mail__img
	width 100%

.mail__btn
	btn(white, color5)
	ps-bold(16px, 1.3, color5)
	btn-hover(color5, color5, white)

.mail-list
	some-list(color5)
	padding 0

@media (max-width: 992px)
	.mail-column
		flex-column()
		
	.mail-container
		flex-direction column
	
	.mail-column:first-child
		margin-bottom 3em
	
	.mail__title
		align-center()
		
	.mail__text
		align-center()
	
	.mail-column:first-child
		display none
	.mail-list
		align-center()

@media (max-width: 576px)
	.mail__title
		margin 0 1em
		margin-bottom 1em
	.mail__text
		margin 0 2.5em
		margin-bottom 2em
