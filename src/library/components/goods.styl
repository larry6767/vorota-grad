.goods
	background-color #292929
	padding-top 4em
	padding-bottom 4em

.goods__title
	some-title(white)
	text-transform uppercase
	align-center()
	margin-top 0

.goods-container
	max-width 1200px
	padding-top 0.1em
	margin 0 auto
	flex-row()

.goods-column
	width 33%

.goods-filter
	flex-column()
	padding-left 2em
	padding-right 2em

.goods__column-title
	some-title(white)

.goods__text
	some-text(white)
	align-center()
	margin-top 2em
	margin-bottom 2em
	max-width 230px

.goods__btn
	btn(white, white)
	ps-bold(1rem, 1.3, color5)
	margin-bottom 1em
	width 90%
	max-width 230px

.goods__img
	width 150px
	height 150px
	border 1em solid #fff
	background-image url("../img/produce.png")

@media screen and (max-width: 768px)
	.goods-container
		flex-direction row-reverse
		flex-wrap wrap-reverse
	.goods-column
		width 50%
@media screen and (max-width: 576px)
	.goods-container
		flex-column()
	.goods-column
		width 100%
	