.main-header-wrapper
	max-width 1200px
	margin 0 auto
	flex-row()

.logo
	flex-grow 1
	flex-center()

.main-navigation
	flex-grow 1

.phone-block
	flex-grow 1
	text-align center

.phone-number
	ps-bold(1.5rem, 1.3, color4)
	text-decoration none
	underline-animation()

.phone-block__text
	some-text(color5)
	align-center()

.main-navigation
	&__list
		padding-left 0px
		list-style-type none
		flex-row()
	
	&__item
		padding 20px 0

	&__link
		padding 20px 15px
		text-decoration none
		text-transform uppercase
		ps-bold(1rem, 1.3, color5)

	&__link:hover
		text-decoration none
		color color4
		transition-duration: 0.3s

	&__active
		padding-top 20px
		border-top 2px solid color4

.underline-animation
	underline-animation()

@media (max-width: 992px)
	.main-navigation
		order 1
		
	.main-header-wrapper
		padding-top 30px

	.logo
		flex-grow 0
		margin-right 20px
	.phone-block
		flex-grow 0
		margin-left 20px
		
@media (max-width: 576px)
	.main-header-wrapper
		flex-column()
		
	.logo
		margin-right 0
		margin-bottom 30px
	
	.phone-block
		margin-left 0
		margin-bottom 10px
	
	.phone-number
		ps-bold(2rem, 1.3, color4)
		
	.main-navigation__link
		padding 20px 25px
